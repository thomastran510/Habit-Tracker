<body>

    <div class="todo-container">
        <h2>Habit Tracker Alpha</h2>

        <form action="/addtask" method="POST" class="todo-header">
            <input type="text" name="newtask" placeholder="input Task/Chore here">
            <button> Submit </button>

            <h2 class="todo-list"> Current Listed Task/Chore </h2>
            
            <% for( var i = 0; i < task.length; i++){ %>
            <li class="todo-list-item"><input type="checkbox" name="check" value="<%= task[i] %>" /> <%= task[i] %>
            </li>
            <% } %>

            <button formaction="/removetask" type="submit" id="top"> Complete </button>
        </form>

        <h2> Completed Task/Chores </h2>

        <% for(var i = 0; i < complete.length; i++){ %>
        <%= new Date();%>
        <ul>Task complete: <%= complete[i] %></ul>
        <% } %>

    </div>
</body>

